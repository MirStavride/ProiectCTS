<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/country_info_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text_view_country_info"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#f2f2f2"
        android:id="@+id/title_text_view_country_info" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="268dp"
        android:text="Random Text"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="72dp"
        android:textSize="14sp"
        android:id="@+id/information_about_contry_text_view_country_info"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:src="@drawable/romania_flag_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/flag_icon_country_info"
        android:layout_marginTop="1dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back_button_image_country_info"
            android:src="@drawable/back_image_button"
            android:layout_marginLeft="2dp"
            android:onClick="backToIpInfoActivity"/>
            -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:onClick="backToIpInfoActivity"
            android:id="@+id/backToIpInfoActivity_button_CountryInfo"
            android:text="@string/back_buttonText_CountryInfo"/>



    </LinearLayout>

</LinearLayout>